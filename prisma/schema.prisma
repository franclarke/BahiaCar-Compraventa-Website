generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role 
}

enum Role {
  SUPERADMIN
  ADMIN
}

enum CarStatus {
  NEW
  USED
}

model Car {
  id          Int      @id @default(autoincrement())
  brand       String
  model       String
  year        Int
  status      CarStatus
  mileage     Int
  price       Float
  transmission String
  type        String
  fuelType    String
  images      String[]
  description String
  vendido     Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  status    MessageStatus
  createdAt DateTime @default(now())
}

enum MessageStatus {
  UNREAD
  READ
}

model Subscription {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model SellRequest {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String
  email       String
  brand       String
  model       String
  year        Int
  status      CarStatus
  mileage     Int
  price       Float
  message     String
  createdAt   DateTime @default(now())
}